<h1>Edit Section</h1>
<form method="post" action="/sections/update/<%= section.id %>">
	<div class="form group">
		<label for="title">Number</label>
		<input type="text" name="title" class="form-control" value="<%=section.title %>">
	</div>
	<div class="form group">
		<label for="body">Course</label>
		<input type="text" name="body" class="form-control" value="<%=section.body %>">
	</div>

	<div class="form group">
		<label for="bodys">Professor</label>
		<input type="text" name="bodys" class="form-control" value="<%=section.bodys %>">
	</div>

	<div>
		<input type="submit" value="Submit" class="btn btn primary">
	</div>

</form>